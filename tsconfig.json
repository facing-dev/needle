{
    "compilerOptions": {
        "outDir": "./dist/umd",
        "baseUrl": ".",
        "rootDir": "./src",
        "moduleResolution": "node",
        "module": "UMD",
        "target": "ES6",
        "strict": true,
        "sourceMap": true,
        "lib": [
            "ES6"
        ],
        "esModuleInterop": true,
        "isolatedModules": true,
        "emitDeclarationOnly": false,
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "noUnusedLocals": true
    },
    "include": [
        "./src/**/*.ts",
    ]
}